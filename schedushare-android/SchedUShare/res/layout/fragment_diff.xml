<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	<TableLayout
	    android:id="@+id/diff_table_header"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginRight="2dp"
		android:layout_marginLeft="2dp">
	    <TableRow>
			<TextView
			    android:layout_margin="1dp"
			    android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="        "
				android:typeface="monospace"/>
			
			<TextView
				android:layout_margin="1dp"
				android:layout_weight="1"
				android:text="Mon"/>
			
			<TextView
				android:layout_margin="1dp"
				android:layout_weight="1"
				android:text="Tue"/>
			
			<TextView
				android:layout_margin="1dp"
				android:layout_weight="1"
				android:text="Wed"/>
			
			<TextView
				android:layout_margin="1dp"
				android:layout_weight="1"
				android:text="Thu"/>
			
			<TextView
				android:layout_margin="1dp"
				android:layout_weight="1"
				android:text="Fri"/>
			
			<TextView
				android:layout_margin="1dp"
				android:layout_weight="1"
				android:text="Sat"/>
			
			<TextView
				android:layout_margin="1dp"
				android:layout_weight="1"
				android:text="Sun"/>
		</TableRow>	
	</TableLayout>
	
	<ScrollView
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginRight="2dp"
		android:layout_marginLeft="2dp">
	    <TableLayout
	        android:id="@+id/diff_table_layout"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content">
		    <TableRow
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content">
				<TextView
					android:layout_height="0dp"
					android:layout_width="wrap_content"
					android:layout_marginLeft="1dp"
					android:layout_marginRight="1dp"
					android:text="        "
					android:typeface="monospace"/>
				
				<TextView
					android:layout_height="0dp"
					android:layout_weight="1"
					android:layout_marginLeft="1dp"
					android:layout_marginRight="1dp"
					android:text="Mon"/>
				
				<TextView
					android:layout_height="0dp"
					android:layout_weight="1"
					android:layout_marginLeft="1dp"
					android:layout_marginRight="1dp"
					android:text="Tue"/>
				
				<TextView
					android:layout_height="0dp"
					android:layout_weight="1"
					android:layout_marginLeft="1dp"
					android:layout_marginRight="1dp"
					android:text="Wed"/>
				
				<TextView
					android:layout_height="0dp"
					android:layout_weight="1"
					android:layout_marginLeft="1dp"
					android:layout_marginRight="1dp"
					android:text="Thu"/>
				
				<TextView
					android:layout_height="0dp"
					android:layout_weight="1"
					android:layout_marginLeft="1dp"
					android:layout_marginRight="1dp"
					android:text="Fri"/>
				
				<TextView
					android:layout_height="0dp"
					android:layout_weight="1"
					android:layout_marginLeft="1dp"
					android:layout_marginRight="1dp"
					android:text="Sat"/>
				
				<TextView
					android:layout_height="0dp"
					android:layout_weight="1"
					android:layout_marginLeft="1dp"
					android:layout_marginRight="1dp"
					android:text="Sun"/>
			</TableRow>
		</TableLayout>
	</ScrollView>
</LinearLayout>