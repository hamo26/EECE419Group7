<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >
    
	<TextView
		android:id="@+id/checkable_schedule_list_owner_entry"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="20dp" />
	
	<TextView
		android:id="@+id/checkable_schedule_list_name_entry"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/checkable_schedule_list_owner_entry"
		android:textSize="20dp" />
	
	<CheckBox android:text=""
		android:id="@+id/checkable_schedule_list_checkbox"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:checked="false">
	</CheckBox>
	
</RelativeLayout>